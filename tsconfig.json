{
  "include": ["./src"],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2016",
    "lib": ["ES2016", "DOM"],
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "removeComments": true,
    "noEmitOnError": true
  }
}
